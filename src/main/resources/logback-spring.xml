<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <springProperty name="SERVICE_NAME" source="spring.application.name"/>
    <springProperty name="ACTIVE_PROFILE" source="spring.profiles.active" defaultValue="dev"/>

    <!-- Loki Appender (test 프로파일에서는 완전 제외) -->
    <springProfile name="!test">
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
                <providers>
                    <timestamp>
                        <timeZone>Asia/Seoul</timeZone>
                    </timestamp>
                    <pattern>
                        <pattern>
                            {
                            "timestamp": "%date{ISO8601}",
                            "level": "%level",
                            "logger": "%logger",
                            "thread": "%thread",
                            "service": "${SERVICE_NAME}",
                            "env": "${ACTIVE_PROFILE}",
                            "traceId": "%X{traceId:-}",
                            "spanId": "%X{spanId:-}",
                            "message": "%message",
                            "exception": "%exception{5}"
                            }
                        </pattern>
                    </pattern>
                    <arguments/>
                </providers>
            </encoder>
        </appender>
    </springProfile>

    <!-- Test Profile -->
    <springProfile name="test">
        <root level="WARN">
            <appender-ref ref="CONSOLE"/>
        </root>
        <logger name="com.jumunhasyeo" level="INFO"/>
        <logger name="org.hibernate" level="ERROR"/>
        <logger name="org.springframework" level="WARN"/>
        <logger name="com.github.loki4j" level="OFF"/>
    </springProfile>

    <!-- Production Profile -->
    <springProfile name="!test">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

</configuration>